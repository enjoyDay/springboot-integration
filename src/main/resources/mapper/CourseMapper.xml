<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springbootIntegration.demo.mapper.CourseMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.springbootIntegration.demo.entity.Course">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="teacher" property="teacher" />
        <result column="time_created" property="timeCreated" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, teacher, time_created
    </sql>

</mapper>
